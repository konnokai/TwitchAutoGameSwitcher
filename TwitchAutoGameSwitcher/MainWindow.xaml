<Window x:Class="TwitchAutoGameSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:local="clr-namespace:TwitchAutoGameSwitcher"
        mc:Ignorable="d"
        Title="Twitch 自動遊戲分類切換器" Height="600" Width="744">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="StatusLab" Content="" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <!-- 語言切換 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10" Grid.Row="0">
            <TextBlock Text="語言 / Language:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="LanguageComboBox" Width="100" SelectedIndex="0">
                <ComboBoxItem Content="繁體中文" Tag="zh-TW"/>
                <ComboBoxItem Content="English" Tag="en"/>
            </ComboBox>
        </StackPanel>
        <!-- DataGrid 區塊 -->
        <DataGrid x:Name="GameDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,10,0,10"
                  IsReadOnly="True" SelectionMode="Single" SelectionUnit="FullRow">
            <DataGrid.Resources>
                <Style x:Key="CenterTextColumnStyle" TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="TextAlignment" Value="Center"/>
                </Style>
                <Style x:Key="CenterHeaderStyle" TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="編輯" Click="EditMenuItem_Click"/>
                    <MenuItem Header="刪除" Click="DeleteMenuItem_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="優先度" Binding="{Binding Priority}" Width="80"
                                    ElementStyle="{StaticResource CenterTextColumnStyle}" HeaderStyle="{StaticResource CenterHeaderStyle}"/>
                <DataGridTemplateColumn Header="分類縮圖" Width="80"
                                        HeaderStyle="{StaticResource CenterHeaderStyle}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding BoxArtPath}" Width="52" Height="72" Stretch="Uniform"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="分類名稱" Binding="{Binding Name}" Width="200"
                                    ElementStyle="{StaticResource CenterTextColumnStyle}" HeaderStyle="{StaticResource CenterHeaderStyle}"/>
                <DataGridTextColumn Header="分類 Id" Binding="{Binding Id}" Width="120"
                                    ElementStyle="{StaticResource CenterTextColumnStyle}" HeaderStyle="{StaticResource CenterHeaderStyle}"/>
                <DataGridTextColumn Header="執行檔名稱" Binding="{Binding ExecutableName}" Width="200"
                                    ElementStyle="{StaticResource CenterTextColumnStyle}" HeaderStyle="{StaticResource CenterHeaderStyle}"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- 按鈕區塊 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="StartButton" Content="開始" Width="100" Margin="0,0,10,0"/>
            <Button x:Name="StopButton" Content="停止" Width="100" Margin="0,0,10,0"/>
            <Button x:Name="AddButton" Content="新增資料" Width="120"/>
        </StackPanel>
    </Grid>
</Window>
